<Page x:Class="TestTreeViewMenu.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:data="using:WinRTXamlToolkit.Controls.Data"
      xmlns:local="using:TestTreeViewMenu"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:TestTreeViewMenu.ViewModels"
      xmlns:xc="using:WinRTXamlToolkit.Controls"
      d:DataContext="{d:DesignInstance vm:MainPageViewModel,
                                       IsDesignTimeCreatable=True}"
      mc:Ignorable="d">
