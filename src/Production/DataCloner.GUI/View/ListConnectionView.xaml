<UserControl x:Class="DataCloner.GUI.View.ListConnectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataCloner.GUI.View"
             xmlns:gui="clr-namespace:DataCloner.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="11*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DataGrid Name="dgServers"
                  ItemsSource="{Binding Servers}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="True"
                  CanUserDeleteRows="True"
                  IsReadOnly="False" Margin="0,0,0,5"
                  Grid.Row="0"
                  BorderBrush="{StaticResource AccentColorBrush}"
                  BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id, UpdateSourceTrigger=PropertyChanged}"/>
                <DataGridTextColumn Header="Nom" Binding="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
                <DataGridTextColumn Header="Nom du fournisseur" Binding="{Binding ProviderName, UpdateSourceTrigger=PropertyChanged}"/>
                <DataGridTextColumn Header="Chaîne de connexion" Binding="{Binding ConnectionString, UpdateSourceTrigger=PropertyChanged}"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal">
            <Button Content="Ajouter" Command="{Binding AddCommand}" CommandParameter="{Binding ElementName=dgServers}"/>
            <Button Content="Supprimer"/>
            <Button Content="Enregistrer" Command="{Binding SaveCommand}" CommandParameter="{Binding ElementName=dgServers, Path=CurrentItem}"/>
        </StackPanel>
    </Grid>
</UserControl>
