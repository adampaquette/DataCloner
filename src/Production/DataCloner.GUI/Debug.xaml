<Window x:Class="DataCloner.GUI.Debug"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataCloner.GUI"
        mc:Ignorable="d"
        Title="Debug" Height="599.7" Width="482">
    <Grid>
        <GroupBox x:Name="groupBox" Header="Cloner source" Height="336" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="180">
            <StackPanel Margin="0,0,-2,-12" Height="344" VerticalAlignment="Top">
                <Label x:Name="label" Content="Server"/>
                <TextBox x:Name="TxtServer" Height="23" TextWrapping="Wrap" Text="1"/>
                <Label x:Name="label1" Content="Database"/>
                <TextBox x:Name="TxtDatabase" Height="23" TextWrapping="Wrap" Text="dataclonertestdatabase"/>
                <Label x:Name="label2" Content="Schema"/>
                <TextBox x:Name="TxtSchema" Height="23" TextWrapping="Wrap" Text="" />
                <Label x:Name="label3" Content="Table"/>
                <TextBox x:Name="TxtTable" Height="23" TextWrapping="Wrap" Text="employees"/>
                <Label x:Name="label4" Content="Column"/>
                <TextBox x:Name="TxtColumn" Height="23" TextWrapping="Wrap" Text="employeeNumber"/>
                <Label x:Name="label5" Content="Value"/>
                <TextBox x:Name="TxtValue" Height="23" TextWrapping="Wrap" Text="1188"/>
                <Button x:Name="BtnClone" Content="Clone" HorizontalAlignment="Left" VerticalAlignment="Top" Width="170" Click="BtnClone_Click"/>
            </StackPanel>
        </GroupBox>

        <Button x:Name="BtnBuildAllCache" Content="Build all caches" HorizontalAlignment="Left" Margin="205,10,0,0" VerticalAlignment="Top" Width="122" Click="BtnBuildAllCache_Click"/>
        <TextBox x:Name="TxtStatus" Margin="0,394,0,0" TextWrapping="NoWrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" />

    </Grid>
</Window>
