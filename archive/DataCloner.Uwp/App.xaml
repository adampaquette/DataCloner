<prism:PrismUnityApplication x:Class="DataCloner.Uwp.App"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:local="using:DataCloner.Uwp"
                             xmlns:prism="using:Prism.Unity.Windows"
                             RequestedTheme="Light">

    <prism:PrismUnityApplication.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/DataTemplates.xaml" />
                <ResourceDictionary Source="Themes/ThemeStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </prism:PrismUnityApplication.Resources>
</prism:PrismUnityApplication>
